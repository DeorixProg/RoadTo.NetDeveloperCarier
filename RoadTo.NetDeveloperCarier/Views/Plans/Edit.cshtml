@model Plan

<h1>Edit Plan!</h1>
<form asp-action="Edit">
  <div class="mb-3">
    <label class="form-label">Title</label>
    <input asp-for="Name" class="form-control">
  </div>
  <div class="mb-3">
    <label class="form-label">Short Description</label>
    <input asp-for="ShortDescription" class="form-control" placeholder="Today I...">
  </div>
  <div class="input-group mb-3">
  <span class="input-group-text">Full Description</span>
  <textarea asp-for="FullDescription" class="form-control" aria-label="With textarea"></textarea>
</div>
<select asp-for="DifficultyLevel" class="form-select mb-3" aria-label="Default select example">
  <option selected>Select Difficulty</option>
        @foreach (var level in (DifficultyLevel[])ViewBag.DifficultyLevels)
        {
            <option value="@level">@level</option>
        }
</select>
<div class="mb-3">
  <label asp-for="DeadLine" class="form-label">DeadLine</label>
  <input asp-for="DeadLine" type="date" class="form-control" placeholder="Day, Month, Year"/>
</div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
